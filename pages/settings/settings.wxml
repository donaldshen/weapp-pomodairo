<view class="container">
  <view class="section">
    <text>目标 / 🍅</text>
      <slider bindchange="targetChange" min="1" max="25" value="{{target}}" show-value/>
  </view>
  <view class="section">
    <text>工作时间 / 分</text>
    <slider bindchange="workChange" min="5" max="60" step="5" value="{{workInterval}}" show-value/>
  </view>
  <view class="section">
    <text>休息时间 / 分</text>
    <slider bindchange="breakChange" min="1" max="30" value="{{breakInterval}}" show-value/>
  </view>
